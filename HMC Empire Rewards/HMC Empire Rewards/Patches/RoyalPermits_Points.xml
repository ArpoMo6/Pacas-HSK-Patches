<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationSequence">
        <operations>
        
            <!-- Points awarded -->
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/RoyalTitleDef[defName="Acolyte" or defName="Knight"]/permitPointsAwarded</xpath>
                <value>
                    <permitPointsAwarded>2</permitPointsAwarded>
                </value>
            </li>
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/RoyalTitleDef[defName="Praetor"]/permitPointsAwarded</xpath>
                <value>
                    <permitPointsAwarded>3</permitPointsAwarded>
                </value>
            </li>
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/RoyalTitleDef[defName="Baron"]/permitPointsAwarded</xpath>
                <value>
                    <permitPointsAwarded>4</permitPointsAwarded>
                </value>
            </li>
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/RoyalTitleDef[defName="Count"]/permitPointsAwarded</xpath>
                <value>
                    <permitPointsAwarded>5</permitPointsAwarded>
                </value>
            </li>
            
            <!-- Points costs -->
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/RoyalTitlePermitDef[defName="CallMilitaryAidLarge" or defName="CallLaborerTeam" or defName="CallOrbitalStrike" or defName="CallTransportShuttle"]/permitPointCost</xpath>
                <value>
                    <permitPointCost>2</permitPointCost>
                </value>
            </li>
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/RoyalTitlePermitDef[defName="CallLaborerGang" or defName="CallMilitaryAidGrand" or defName="CallOrbitalSalvo"]/permitPointCost</xpath>
                <value>
                    <permitPointCost>3</permitPointCost>
                </value>
            </li>
            
            <li Class="PatchOperationAdd">
                <xpath>Defs/RoyalTitlePermitDef[defName="GlitterMedDrop"]</xpath>
                <value>
                    <permitPointCost>2</permitPointCost>
                </value>
            </li>
            
            <!-- Amount / Time balance -->
            
            <!-- Steel -->
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/RoyalTitlePermitDef[defName="SteelDrop"]/royalAid/itemsToDrop</xpath>
                <value>
                    <itemsToDrop>
                        <Steel>150</Steel>
                    </itemsToDrop>
                </value>
            </li>
            
            <!-- Silver -->
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/RoyalTitlePermitDef[defName="SilverDrop"]/royalAid/itemsToDrop</xpath>
                <value>
                    <itemsToDrop>
                        <Silver>1000</Silver>
                    </itemsToDrop>
                </value>
            </li>
            
            <!-- Food -->
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/RoyalTitlePermitDef[defName="FoodDrop"]/royalAid/itemsToDrop</xpath>
                <value>
                    <itemsToDrop>
                       <MealSurvivalPack>30</MealSurvivalPack>
                    </itemsToDrop>
                </value>
            </li>
            
            <!-- GlitterMed -->

            <li Class="PatchOperationAdd">
                <xpath>Defs/RoyalTitlePermitDef[defName="GlitterMedDrop"]</xpath>
                <value>
                    <cooldownDays>30</cooldownDays>
                </value>
            </li>
            
            <!-- Fighters -->
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/RoyalTitlePermitDef[defName="CallMilitaryAidSmall"]/royalAid/pawnCount</xpath>
                <value>
                    <pawnCount>2</pawnCount>
                </value>
            </li>
            
            <li Class="PatchOperationReplace">
                <xpath>Defs/RoyalTitlePermitDef[defName="CallMilitaryAidSmall"]/cooldownDays</xpath>
                <value>
                    <cooldownDays>20</cooldownDays>
                </value>
            </li>
            
        </operations>
    </Operation>
</Patch>