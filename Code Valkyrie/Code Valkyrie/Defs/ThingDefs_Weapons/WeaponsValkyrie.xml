<Defs>
  
    <ThingDef ParentName="SK_BaseMeleeWeapon">
        <defName>MeleeValkyrieStinger</defName>
        <label>stinger</label>
        <description>A powerful mechanoid blade. Named for the wasp-like appearence of the mechanoids using it.</description>
        <techLevel>Spacer</techLevel>
        <graphicData>
            <texPath>Weapons/Mechsword</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <tradeability>None</tradeability>
        <destroyOnDrop>true</destroyOnDrop>
        <relicChance>0</relicChance>
        <statBases>
            <MarketValue>9000</MarketValue>
            <Bulk>4.5</Bulk>
			<Mass>2.2</Mass>
        </statBases>
        <weaponTags>
            <li>MeleeValkyrieWeapon</li>
        </weaponTags>
        <weaponClasses>
			<li>MeleePiercer</li>
		</weaponClasses>
        <thingCategories>
			<li>AgileMelee</li>
		</thingCategories>
        <tools>
			<li Class="CombatExtended.ToolCE">
				<label>point</label>
				<capacities>
					<li>Stab</li>
				</capacities>
				<power>28</power>
				<cooldownTime>1.1</cooldownTime>
				<chanceFactor>1.15</chanceFactor>
				<armorPenetrationBlunt>20</armorPenetrationBlunt>
				<armorPenetrationSharp>40</armorPenetrationSharp>
				<linkedBodyPartsGroup>Point</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>blade</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>48</power>
				<cooldownTime>1.35</cooldownTime>
				<chanceFactor>0.8</chanceFactor>
				<armorPenetrationSharp>3.5</armorPenetrationSharp>
				<armorPenetrationBlunt>5.4</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Blade</linkedBodyPartsGroup>
			</li>
		</tools>
        <verbs MayRequire="Ludeon.RimWorld.Royalty">
            <li>
                <verbClass>MVCF.Verbs.Verb_CooldownJump</verbClass>
                <label>jump</label>
                <violent>true</violent>
                <hasStandardCommand>true</hasStandardCommand>
                <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
                <warmupTime>0.5</warmupTime>
                <requireLineOfSight>true</requireLineOfSight>
                <range>20</range>
                <targetParams>
                    <canTargetLocations>false</canTargetLocations>
                    <canTargetPawns>true</canTargetPawns>
                    <canTargetBuildings>false</canTargetBuildings>
                </targetParams>
            </li>
        </verbs>
    </ThingDef>
  
