<Defs>
    <XmlExtensions.SettingsMenuDef>
        <defName>VOID_Settings_Plus</defName>
        <modId>VOID.Pacas.Settings</modId>
        <tKey>VOID_MainTitle</tKey>
        <label>V.O.I.D. - Extended Settings</label>
        <settings>
            <li Class="XmlExtensions.Setting.Gap"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>Difficulty</text>
                <tKey>Difficulty_Title</tKey>
                <font>Medium</font>
                <anchor>Middle</anchor>
            </li>
            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>Recruit_Cheese</key>
                <label>Recruit</label>
                <tKey>Recruit_Cheese</tKey>
                <defaultValue>true</defaultValue>
                <tooltip>V.O.I.D. will not tolerate deserters</tooltip>
            </li>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>Invis_Cheese</key>
                <label>Invisibility</label>
                <tKey>Invis_Cheese</tKey>
                <defaultValue>true</defaultValue>
                <tooltip>V.O.I.D. will see you even in invisibility</tooltip>
            </li>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>Raid_Cheese</key>
                <label>Raids</label>
                <tKey>Raid_Cheese</tKey>
                <defaultValue>false</defaultValue>
                <tooltip>V.O.I.D. will smash you faster</tooltip>
            </li>
            <li Class="XmlExtensions.Setting.Checkbox">
                <key>Spider_Jump_Void</key>
                <label>Spider mutant</label>
                <tKey>Spider_Jump_Void</tKey>
                <defaultValue>false</defaultValue>
                <tooltip>Mutant spider can jump!</tooltip>
            </li>
            <li Class="XmlExtensions.Setting.GapLine"/>
            <li Class="XmlExtensions.Setting.Text">
                <text>All options require restart to apply</text>
            </li>
        </settings>
