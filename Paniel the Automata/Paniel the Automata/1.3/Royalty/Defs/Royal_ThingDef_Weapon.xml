    <RulePackDef>
        <defName>PN_NamerChainSword</defName>
        <include>
            <li>PN_NamerFirst</li>
            <li>PN_NamerChainSwordfirst</li>
        </include>
        <rulePack>
            <rulesStrings>
                <li>r_weapon_name->[PNChainSword] [PNof] [PNFirstNamer]</li>
